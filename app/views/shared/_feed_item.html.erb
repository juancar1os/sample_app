<tr>
	<td class="gravatar">
		<%= link_to gravatar_for(feed_item.user), feed_item.user %>
	</td>
	<td class="micropost">
		<span class="user">
			<%= link_to feed_item.user.nombre, feed_item.user %>
		</span>
		<span class="content"><%=wrap(feed_item.contenido) %></span>
		<span class="timestamp">
			Escrito hace <%= time_ago_in_words(feed_item.created_at) %>
		</span>
	</td>
	<% if current_user?(feed_item.user) %>
		<td>
			<%= link_to "borrar", feed_item, :method => :delete,
			 								 :confirm => "Seguro?",
			 								 :title => feed_item.contenido %>
		</td>
	<% end %>
</tr>