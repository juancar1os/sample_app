<% @user ||= current_user %>
<div class="stats">
	<table summary="Estados">
		<tr>
			<td>
				<a href="<%= following_user_path(@user) %>">
					<span id="following" class="stat">
						Sigo a: <%= @user.following.count %>
					</span>
				</a>
			</td>
		 	<td>
				<a href="<%= followers_user_path(@user) %>">
					<span id="followers" class="stat">
						Tengo <%= pluralize(@user.followers.count, "seguidores") %>
					</span>
				</a>
			</td>
		</tr>
	</table>
</div>