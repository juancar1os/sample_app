<table class="profile" summary="Informacion del perfil">
	<tr>
		<td class="main">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.nombre %>
			</h1>
		</td>
		<td class="sidebar round">
			<strong>Nombre</strong> <%= @user.nombre %> <br />
			<strong>URL</strong> <%= link_to user_path(@user), @user%>
	</tr>
</table>
