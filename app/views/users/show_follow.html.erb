<table summary="InformaciÃ³n de quienes sigo y seguidores">
	<tr>
		<td class="main">
			<h1><%= @title %></h1>
			
			<% unless @users.empty? %>
				<ul class="users">
					<%= render @users %>
				</ul>
				<%= will_paginate @users %>
			<% end %>
		</td>
		<td class="sidebar round">
			<strong>Nombre</strong> <%= @user.nombre %><br />
			<string>URL</strong> <%= link_to user_path(@user), @user %><br />
			<strong>iTuits</strong> <%= @user.microposts.count %>
			<%= render 'shared/stats' %>
			<% unless @users.empty? %>
				<% @users.each do |user| %>
					<%= link_to gravatar_for(user, :size => 30), user %>
				<% end %>
			<% end %>
		</td>
	</tr>
</table>